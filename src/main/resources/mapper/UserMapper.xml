<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wizzstudio.hole.mapper.UserMapper" >
    <select id="queryUserById" resultType="com.wizzstudio.hole.model.User">
        SELECT id,open_id,address,nick_name,valid
        FROM `user`
        WHERE id = #{id}
        AND valid = 1
    </select>
    <insert id="insertUser" parameterType="com.wizzstudio.hole.model.User">
        INSERT INTO `user`(open_id,address,nick_name)
        VALUES(#{openId},#{address},#{nickName})
    </insert>
</mapper>